<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Kayıtlar</title>
  <link rel="stylesheet" href="/public/css/admin.css" />
</head>
<body>
  <div class="container">
    <div class="topbar">
      <h1>Kayıtlar</h1>
      <div class="topbar-actions">
        <a href="/admin">Panel</a>
        <a href="/admin/settings">Ayarlar</a>
        <a href="/admin/logout">Çıkış</a>
      </div>
    </div>
    <table>
      <thead>
        <tr>
          <th>Ad</th><th>Telefon</th><th>Tarih</th><th>Mesaj</th><th>Durum</th><th>İşlemler</th>
        </tr>
      </thead>
      <tbody>
      <% items.forEach(i => { %>
        <tr>
          <td><%= i.name %></td>
          <td><%= i.phone %></td>
          <td><%= i.date ? new Date(i.date).toLocaleString('tr-TR') : '-' %></td>
          <td class="wrap"><%= i.message || '-' %></td>
          <td>
            <form method="POST" action="/admin/appointments/<%= i._id %>/status">
              <select name="status" onchange="this.form.submit()">
                <option value="pending" <%= i.status==='pending'?'selected':'' %>>pending</option>
                <option value="contacted" <%= i.status==='contacted'?'selected':'' %>>contacted</option>
              </select>
            </form>
          </td>
          <td>
            <form method="POST" action="/admin/appointments/<%= i._id %>/delete" onsubmit="return confirm('Silinsin mi?')">
              <button class="danger" type="submit">Sil</button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
